<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/basvuru_arkaplan"
    android:fillViewport="true"
    android:orientation="vertical"
    android:focusable="false"
    android:focusableInTouchMode="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="410dp"
            android:layout_height="1250dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ogrenci_kaydol_imageview"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="125dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/ic_baseline_add_a_photo_24"
                android:clickable="true"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Ad"
                style="@style/tw_style"
                android:translationX="10dp"
                android:translationY="220dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_ad"
                style="@style/et_style"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:translationX="10dp"
                android:translationY="260dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Soyad"
                style="@style/tw_style"
                android:translationX="220dp"
                android:translationY="220dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_soyad"
                style="@style/et_style"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:translationX="220dp"
                android:translationY="260dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Öğrenci TC"
                style="@style/tw_style"
                android:translationX="10dp"
                android:translationY="320dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_ogrtc"
                style="@style/et_style"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:translationX="10dp"
                android:translationY="360dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Doğum Tarihi"
                style="@style/tw_style"
                android:translationX="10dp"
                android:translationY="420dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_dogumtarihi"
                style="@style/et_style"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:translationX="10dp"
                android:translationY="460dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="195dp"
                android:layout_height="40dp"
                android:text="Telefon Numarası"
                style="@style/tw_style"
                android:translationX="10dp"
                android:translationY="520dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_ogrtelno"
                style="@style/et_style"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                android:translationX="10dp"
                android:translationY="560dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="Öğrenci Adres"
                style="@style/tw_style"
                android:translationX="220dp"
                android:translationY="320dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="İş Adres"
                style="@style/tw_style"
                android:translationX="220dp"
                android:translationY="520dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Üniversite"
                style="@style/tw_style"
                android:translationX="10dp"
                android:translationY="620dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_uni"
                style="@style/et_style"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:translationX="10dp"
                android:translationY="660dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Fakülte"
                style="@style/tw_style"
                android:translationX="10dp"
                android:translationY="720dp"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/et_ogrenci_kaydol_fakulte"
                style="@style/et_style"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                android:translationX="10dp"
                android:translationY="760dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Bölüm"
                style="@style/tw_style"
                android:translationX="220dp"
                android:translationY="720dp"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/et_ogrenci_kaydol_bolum"
