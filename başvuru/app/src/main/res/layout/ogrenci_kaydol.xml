                android:translationY="820dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_sinif"
                style="@style/et_style"
                android:layout_width="173dp"
                android:layout_height="41dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                android:translationX="220dp"
                android:translationY="860dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Öğrenci Mail"
                style="@style/tw_style"
                android:translationX="10dp"
                android:translationY="1020dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_mail"
                style="@style/et_style"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                android:translationX="10dp"
                android:translationY="1060dp"
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/button_ogrenci_kaydol"
                style="@style/button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/buton_gorunumleri"
                android:text="Kaydı Tamamla"
                android:translationX="110dp"
                android:translationY="1150dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_ogradres"
                style="@style/et_style"
                android:layout_width="172dp"
                android:layout_height="136dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="360dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textAlignment="textStart"
                tools:ignore="Autofill,LabelFor" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_isadresi"
                style="@style/et_style"
                android:layout_width="172dp"
                android:layout_height="135dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="561dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textAlignment="textStart"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Öğrenci Şifre"
                style="@style/tw_style"
                android:translationX="10dp"
                android:translationY="920dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_ogrenci_kaydol_ogrsifre"
                style="@style/et_style"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/metin_kutusu_kenarlari"
                android:ems="10"
                android:inputType="textPassword"
                android:text=""
                android:textAlignment="center"
                android:translationX="10dp"
                android:translationY="960dp"
                tools:ignore="Autofill,LabelFor" />

            <CheckBox
                android:id="@+id/cb_ogrenci_kaydol_sifregoster"
                style="@style/et_style"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Şifre Göster"
                android:textColor="@color/white"
                android:translationX="200dp"
                android:translationY="960dp" />
