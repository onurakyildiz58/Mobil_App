<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/akademisyen_basvuru_birtanesi_arkaplan"
    android:padding="16dp">


    //HER BİLGİNİN NE ŞEKİLDE GÖRÜNTÜLENECEĞİNİ(SATIR ŞEKLİNDE) AYARLAMAK İÇİN EKSTRA BİR LAYOUT
    DOSYASI

    <TextView
        android:layout_height="56dp"
        android:layout_width="207dp"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="TextView"
        android:id="@+id/tw_akadmeisyen_basvuru_belgesi_tekbilgi_ad"/>


    <Button
        android:background="@drawable/buton_gorunumleri"
        android:layout_height="25dp"
        android:layout_width="143dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:text="Başvuruyu İndir"
        android:id="@+id/button_akademisyen_belge_indir"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="0dp"
        style="@style/button"/>

    <TextView
        android:layout_height="25dp"
        android:layout_width="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#686767"
        android:text="TextView"
        android:id="@+id/akademisyen_url"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>



</androidx.constraintlayout.widget.ConstraintLayout>